<% content_for :content do %>
  <section class="login">
    <div class="container">
      <div class="row">
        <div class="col-md-6 col-md-offset-3">
          <h2>Login</h2>
          <%= simple_form_for(@user_session) do |f| %>
            <%= f.input :email %>
            <%= f.input :password %>
            <%= f.submit 'Login', class: 'btn btn-primary' %>
          <% end %>
        </div>
      </div>
    </div>
  </section>
<% end %>