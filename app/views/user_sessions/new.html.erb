<% content_for :content do %>
  <section class="login">
    <div class="container">
      <div class="row">
        <div class="col-md-6 col-md-offset-3">
          <h2>Login</h2>
          <% unless @users_exist %>
            <p>
              There are no users in your database. This first time when you log in the user will be automatically created for you.
            </p>
          <% end %>
          <%= simple_form_for(@user_session) do |f| %>
            <%= f.input :email %>
            <%= f.input :password %>
            <%= f.submit 'Login', class: 'btn btn-primary' %>
          <% end %>

          <%= generate_table({ content: [[1,2,3],[2,3,5],[3,5,8]] }) %>
        </div>
      </div>
    </div>
  </section>
<% end %>