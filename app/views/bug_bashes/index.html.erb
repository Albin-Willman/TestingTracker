<% content_for :content do %>
  <div class="container">
    <h1>Listing Bug_bashes</h1>
    <p>
      <%= link_to 'New BugBash', new_bug_bash_path %>
    </p>
    <table class="table table-striped">
      <thead>
        <tr>
          <th>Name</th>
          <th>Done</th>
          <th colspan="3"></th>
        </tr>
      </thead>

      <tbody>
        <% @bug_bashes.each do |bug_bash| %>
          <tr>
            <td><%= bug_bash.name %></td>
            <td><%= bug_bash.done %></td>
            <td><%= link_to 'Show', bug_bash_path(bug_bash) %></td>
            <td><%= link_to 'Edit', edit_bug_bash_path(bug_bash) %></td>
            <td><%= link_to 'Destroy', bug_bash, method: :delete, data: { confirm: 'Are you sure?' } %></td>
          </tr>
        <% end %>
      </tbody>
    </table>
  </div>
<% end %>