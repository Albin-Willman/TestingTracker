<% content_for :content do %>
  <section>
    <div class="container">
      <h1>Listing User</h1>
      <p>
        <%= link_to 'New User', new_user_path %>
      </p>
      <table class="table table-striped">
        <thead>
          <tr>
            <th>Email</th>
            <th></th>
          </tr>
        </thead>

        <tbody>
          <% @users.each do |user| %>
            <tr>
              <td><%= user.email %></td>
              <td><%= link_to 'Destroy', user, method: :delete, data: { confirm: 'Are you sure?' } %></td>
            </tr>
          <% end %>
        </tbody>
      </table>
    </div>
  </section>
<% end %>