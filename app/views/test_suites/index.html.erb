<% content_for :content do %>
  <section>
    <div class="container">
      <h1>Listing TestSuites - <%= link_to 'New TestSuite', new_test_suite_path, class: 'btn btn-primary btn-xs' %></h1>
      <%= generate_table(
        striped: true,
        data_table: true,
        header: ['Status', 'Name', 'Description', 'Repo','', '', ''],
        content: @test_suites.map do |test_suite|
          [
            test_suite.status,
            test_suite.name,
            test_suite.description,
            test_suite.repo,
            link_to('Show', test_suite_path(test_suite)),
            link_to('Edit', edit_test_suite_path(test_suite)),
            link_to('Destroy', test_suite, method: :delete, data: { confirm: 'Are you sure?' })
          ]
        end) %>
    </div>
  </section>
<% end %>