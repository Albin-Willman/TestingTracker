<% content_for :content do %>
  <section>
    <div class="container">
      <h1>Listing Test_suites</h1>
      <p>
        <%= link_to 'New TestSuite', new_test_suite_path %>
      </p>

      <%= generate_table(
        striped: true,
        data_table: true,
        header: ['Name', 'Description', '', '', ''],
        content: @test_suites.map do |test_suite|
          [
            test_suite.name,
            test_suite.description,
            link_to('Show', test_suite_path(test_suite)),
            link_to('Edit', edit_test_suite_path(test_suite)),
            link_to('Destroy', test_suite, method: :delete, data: { confirm: 'Are you sure?' })
          ]
        end) %>
    </div>
  </section>
<% end %>