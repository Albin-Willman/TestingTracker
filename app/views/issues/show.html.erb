<% content_for :content do %>
  <section>
    <div class="container">
      <div class="row">
        <div class="col-md-6">
          <h3><%= @issue.title %></h3>
          <p>
            <%= "Created by #{@issue.user.email}" %>
          </p>
          <% if @issue.number %>
            <p><%= "Issue number ##{@issue.number} on github. The issue is #{@issue.closed ? 'closed' : 'open'}." %></p>
          <% end %>
          <%= @issue.description_html.try(:html_safe) %>
        </div>

        <div class="col-md-6">
          <% if @issue.feature || @issue.test_suite %>
            <div class="well">
              <h3>Issue related to</h3>
              <p>Test suite: <%= @issue.test_suite.try(:name) %></p>
              <p>Feature: <%= @issue.feature.try(:name) %></p>
            </div>
          <% end %>
        </div>
      </div>

  
      <%= link_to 'Back', issues_back_path(@issue), class: 'btn btn-primary' %>
      <%= link_to 'Edit', edit_issue_path(@issue), class: 'btn btn-primary' %>
    </div>
  </section>
<% end %>