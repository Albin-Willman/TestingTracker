<%= generate_table(
  striped: true,
  data_table: true,
  header: ['#', 'Title', 'Closed', 'User', '', ''],
  content: issues.map do |issue|
    [
      issue.number,
      issue.title,
      issue.closed,
      issue.user.email,
      link_to('Show', issue_path(issue)),
      link_to('Edit', edit_issue_path(issue))
    ]
  end) %>